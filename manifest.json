{
  "manifest_version": 2,
  "name": "Gradient editor",
  "description": "A tool for editing CSS gradients",
  "version": "0.0.0",
  "permissions": [
    "<all_urls>"
  ],
  "devtools_page": "devtools.html",
  "background": {
    "scripts": ["dist/background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["dist/content.js"],
    "run_at": "document_end",
    "all_frames": true
  }]
}
